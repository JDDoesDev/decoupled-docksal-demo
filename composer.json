{
    "name": "pantheon-systems/example-drops-8-composer",
    "description": "Install drops-8 with Composer on Pantheon.",
    "type": "project",
    "license": "MIT",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.7",
        "drupal/admin_toolbar": "^3.0",
        "drupal/block_field": "1.0-rc2",
        "drupal/cer": "^4.0@alpha",
        "drupal/coder": "^8.3",
        "drupal/color_field": "^2.5",
        "drupal/config_ignore": "^2.3",
        "drupal/config_split": "^2.0@RC",
        "drupal/core-composer-scaffold": "^9.3.0",
        "drupal/core-recommended": "^9.3.0",
        "drupal/ctools": "^4.0.0",
        "drupal/devel": "^4.1",
        "drupal/disable_html5_validation": "^1.1",
        "drupal/entity_clone": "^1.0@beta",
        "drupal/field_group": "^3.1",
        "drupal/gatsby": "^2.0",
        "drupal/google_tag": "^1.4",
        "drupal/jsonapi_extras": "^3.20",
        "drupal/jsonapi_menu_items": "^1.2",
        "drupal/key_auth": "^2.0",
        "drupal/layout_paragraphs": "^1.0",
        "drupal/lazy": "^3.10",
        "drupal/link_attributes": "^1.11",
        "drupal/linkit": "6.x@beta",
        "drupal/mailsystem": "^4.3",
        "drupal/masquerade": "^2.0@beta",
        "drupal/media_library_edit": "^2.2",
        "drupal/menu_item_extras": "^2.16",
        "drupal/metatag": "^1.15",
        "drupal/moderated_content_bulk_publish": "2.0.11",
        "drupal/openapi": "^2.0",
        "drupal/openapi_jsonapi": "^3.0",
        "drupal/openapi_ui": "^1.0@RC",
        "drupal/openapi_ui_redoc": "^1.0@RC",
        "drupal/paragraphs": "^1.12",
        "drupal/path_redirect_import": "^2.0",
        "drupal/pathauto": "^1.8",
        "drupal/redirect": "^1.7",
        "drupal/redis": "^1.5",
        "drupal/restui": "^1.19",
        "drupal/schema_metatag": "^2.1",
        "drupal/search_api": "^1.23",
        "drupal/search_api_pantheon": "8.0.1",
        "drupal/search_api_solr": "^4.2",
        "drupal/sendgrid_integration": "^1.7",
        "drupal/shs": "^2.0@RC",
        "drupal/token": "^1.9",
        "drupal/twig_tweak": "^3.1",
        "drush-ops/behat-drush-endpoint": "^9.3",
        "drush/drush": "^10.0",
        "pantheon-systems/drupal-integrations": "^8",
        "pantheon-systems/quicksilver-pushback": "^2",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "require-dev": {
        "behat/behat": "^3.1",
        "behat/mink": "^1.7",
        "behat/mink-extension": "^2.2",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "dmore/behat-chrome-extension": "^1.3",
        "drupal/drupal-driver": "^2.2.0",
        "drupal/drupal-extension": "^4.1",
        "drupal/entity_update": "2.0.0-rc2",
        "genesis/behat-fail-aid": "^2.1",
        "jcalderonzumba/mink-phantomjs-driver": "^0.3.1",
        "mikey179/vfsstream": "^1.2",
        "phpunit/phpunit": "^6.5",
        "symfony/css-selector": "^2.8"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "build-assets": [
            "@prepare-for-pantheon",
            "composer install --optimize-autoloader --no-dev"
        ],
        "lint": "find web/modules/custom web/themes/custom -name '*.php' -exec php -l {} \\;",
        "code-sniff": [
            "./vendor/bin/phpcs --standard=Drupal --extensions=php,module,inc,install,test,profile,theme,info,txt,md --ignore=node_modules,bower_components,vendor,dist,scss,css ./web/modules/custom",
            "./vendor/bin/phpcs --standard=Drupal --extensions=php,module,inc,install,test,profile,theme,info,txt,md --ignore=node_modules,bower_components,vendor,dist,scss,css ./web/themes/custom",
            "./vendor/bin/phpcs --standard=DrupalPractice --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md --ignore=node_modules,bower_components,vendor,dist,scss ./web/modules/custom",
            "./vendor/bin/phpcs --standard=DrupalPractice --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md --ignore=node_modules,bower_components,vendor,dist,scss ./web/themes/custom"
        ],
        "unit-test": "echo 'No unit test step defined.'",
        "prepare-for-pantheon": "DrupalProject\\composer\\ScriptHandler::prepareForPantheon",
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-create-project-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "test": [
          "Composer\\Config::disableProcessTimeout"
        ]
    },
    "extra": {
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "patches": {
            "drupal/wordpress_migrate": {
                "Import permalink as URL paths": "https://www.drupal.org/files/issues/2020-09-30/WP-migrate-link-2904545-25.patch"
            },
            "drupal/redirect": {
                "Does not work for path alias": "https://www.drupal.org/files/issues/2021-03-31/redirect-path-alias-2879648-123.patch"
            },
            "drupal/menu_link_clone": {
                "TypeError when Cloning Menu": "https://www.drupal.org/files/issues/2021-06-02/type_error_clonnig_menu-3124682-7.patch"
            },
            "drupal/core": {
              "Allow install from config": "https://www.drupal.org/files/issues/2022-05-19/2982052-80.patch"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/private/scripts/quicksilver/{$name}/": [
                "type:quicksilver-script"
            ]
        },
        "build-env": {
            "install-cms": [
                "drush site-install standard --account-mail={account-mail} --account-name={account-name} --account-pass={account-pass} --site-mail={site-mail} --site-name={site-name} --yes"
            ],
            "export-configuration": "drush config-export --yes"
        },
        "drupal-scaffold": {
            "allowed-packages": [
                "pantheon-systems/drupal-integrations"
            ],
            "locations": {
                "web-root": "./web"
            },
            "file-mapping": {
                "[project-root]/.editorconfig": false,
                "[web-root]/robots.txt": false,
                "[web-root]/sites/development.services.yml": false
            }
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/installers": true,
            "drupal/core-composer-scaffold": true,
            "cweagans/composer-patches": true
        }
    }
}
